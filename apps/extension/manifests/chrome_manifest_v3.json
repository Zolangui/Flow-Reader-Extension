{
  "manifest_version": 3,
  "name": "Flow",
  "version": "1.0.0",
  "description": "Redefine ePub reader",
  "icons": {
    "16": "icons/192.png",
    "48": "icons/192.png",
    "128": "icons/192.png"
  },
  "action": {
    "default_icon": {
      "16": "icons/192.png",
      "48": "icons/192.png"
    },
    "default_title": "Flow"
  },
  "permissions": [
    "storage"
  ],
  "host_permissions": [
    "*://*.dropboxapi.com/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self'"
  }
}
